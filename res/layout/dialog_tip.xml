<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/text_373737"
        android:textSize="@dimen/text_size14" />

    <View style="@style/view_horizontal_line_grey" />

    <TextView
        android:id="@+id/tv_dialog_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:padding="10dp"
        android:text="您确定要删除吗？"
        android:textColor="@color/text_6d6d6d"
        android:textSize="@dimen/text_size14" />

    <View style="@style/view_horizontal_line_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_tip_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@drawable/text_color_blue_black"
            android:textSize="@dimen/text_size16" />

        <View style="@style/view_vertical_line_grey" />

        <TextView
            android:id="@+id/tv_dialog_tip_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@drawable/text_color_blue_black"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

    <View style="@style/view_horizontal_line_grey" />

</LinearLayout>