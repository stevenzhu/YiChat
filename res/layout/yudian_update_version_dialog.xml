<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:text="版本更新提示"
            android:textColor="@color/text_373737"
            android:textSize="@dimen/text_size18" />
    </LinearLayout>

    <View style="@style/view_horizontal_line_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_update_version_dialog_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="15dp"
            android:text="检测到最新版本，请及时更新！"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size16" />

        <View style="@style/view_horizontal_line_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_update_version_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@drawable/text_color_blue_black"
                android:textSize="@dimen/text_size16" />
                
            <View style="@style/view_vertical_line_grey" />

            <TextView
                android:id="@+id/tv_update_version_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="稍后再说"
                android:textColor="@drawable/text_color_blue_black"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>