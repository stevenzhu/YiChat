<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_all_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="60dip"
            android:layout_height="60dip" >

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_avatar_frame" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_555555"
                    android:textSize="@dimen/text_size16"
                    android:text="星辰"/>

                <!--<ImageView-->
                    <!--android:id="@+id/iv_sex"-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@id/tv_name"-->
                    <!--android:scaleType="fitXY" />-->

                <!--<TextView-->
                    <!--android:id="@+id/tv_age"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_toRightOf="@id/iv_sex"-->
                    <!--android:text="13"-->
                    <!--android:textStyle="italic"-->
                    <!--android:textColor="#666"-->
                    <!--android:textSize="@dimen/size_12"/>-->

                <TextView
                    android:id="@+id/tvSexAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/sel_sex"
                    android:background="@drawable/sel_sex_bg"
                    android:textColor="#fff"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="12"
                    android:textStyle="italic"
                    android:drawablePadding="2dp"
                    android:layout_centerVertical="true"
                    android:textSize="11sp"
                    android:layout_toRightOf="@id/tv_name"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0km"
                    android:textColor="@color/text_777777"
                    android:textSize="@dimen/text_size14" />

                <ImageView
                    android:id="@+id/iv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/tv_distance"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_address" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_555555"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>