<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:duplicateParentState="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <RelativeLayout
            android:id="@+id/z_item_avatar"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/iv_item_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/z_item_avatar"
            android:textColor="@color/text_555555"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/tv_item_add"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="@string/button_add"
            android:textColor="@color/text_ffffff"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>

</LinearLayout>