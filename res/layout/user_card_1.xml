                        <TextView
                            android:id="@+id/tvSexAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sel_sex"
                            android:background="@drawable/sel_sex_bg"
                            android:textColor="#fff"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="12"
                            android:textStyle="italic"
                            android:drawablePadding="2dp"
                            android:layout_centerVertical="true"
                            android:textSize="11sp"
                            android:layout_toRightOf="@id/tv_user_nick"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_marginLeft="12dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_555555"
                        android:textSize="@dimen/text_size14" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/view_horizontal_line_grey_height" />

