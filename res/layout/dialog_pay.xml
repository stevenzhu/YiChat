<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/other_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/view_horizontal_line_grey" />

    <LinearLayout
        android:id="@+id/z_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/z_pay_alipay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_pay_alipay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_pay_alipay" />

            <TextView
                android:id="@+id/tv_pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minWidth="100dp"
                android:text="支付宝支付"
                android:textColor="@color/text_555555"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <View style="@style/view_horizontal_line_grey" />

        <LinearLayout
            android:id="@+id/z_pay_wxpay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_pay_wxpay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_pay_wx" />

            <TextView
                android:id="@+id/tv_pay_wxpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minWidth="100dp"
                android:text="微信支付"
                android:textColor="@color/text_555555"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>