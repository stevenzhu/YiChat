<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="里外不是人？乐天家族在韩受审 在华超市关门"
        android:textColor="@color/text_555555"
        android:textSize="@dimen/text_size16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_img"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_img_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="5图"
            android:textColor="@color/text_ffffff"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新华网"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/tv_item_view_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0浏览"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/tv_item_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="121评论"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1分钟前"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size12" />
        <TextView
            android:id="@+id/tv_item_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="置顶"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/text_size12"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="删除"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/text_size12"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>