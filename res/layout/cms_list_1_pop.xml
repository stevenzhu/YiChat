<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_all_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@color/color_orange"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/z_cms_launch"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/cms_list_1_icon_cms_launch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="发图文"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <View
            style="@style/view_horizontal_line_white"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/z_video_record"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/cms_list_1_icon_video_record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="拍小视频"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
        <View
            style="@style/view_horizontal_line_white"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/z_video_upload"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/cms_list_1_icon_video_upload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="上传视频"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>