<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row_weixin"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_item_avatar"
            android:layout_width="@dimen/height_row_weixin"
            android:layout_height="@dimen/height_row_weixin"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_item_avatar"
            android:textColor="@color/text_555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_item_avatar"
            android:singleLine="true"
            android:textColor="@color/text_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_agree"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="@string/agree"
            android:textColor="@color/text_ffffff"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>