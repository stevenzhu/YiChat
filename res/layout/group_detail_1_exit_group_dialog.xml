<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_exit_group_dialog_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_exit_group_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="退出后不会删除任何历史数据，下次登录依然可以使用本账号"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size16" />

        <View style="@style/view_horizontal_line_grey" />

        <TextView
            android:id="@+id/tv_exit_group_dialog_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="退出"
            android:textColor="@color/text_373737"
            android:textSize="@dimen/text_size16" />

        <View style="@style/view_horizontal_line_grey" />

        <TextView
            android:id="@+id/tv_exit_group_dialog_cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/text_8b8b8b"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

</RelativeLayout>