<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_all_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@color/color_orange"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/z_group_create"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="9dp" >

            <ImageView
                android:id="@+id/iv_group_create"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:src="@drawable/msg_main_1_icon_group_create" />

            <TextView
                android:id="@+id/tv_group_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="创建群聊"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <View
            style="@style/view_horizontal_line_white"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/z_contacts_add"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/iv_contacts_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/msg_main_1_icon_contacts_add" />

            <TextView
                android:id="@+id/tv_contacts_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="添加好友"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <View
            style="@style/view_horizontal_line_white"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/z_qrcode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/msg_main_1_icon_qrcode" />

            <TextView
                android:id="@+id/tv_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="扫一扫"
                android:textColor="@color/text_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>