<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical" >

    <include layout="@layout/common_headbar" />

    <View style="@style/view_horizontal_line_grey_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_373737"
            android:textColorHint="@color/text_999999"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_reg_nick" />
    </RelativeLayout>

    <View style="@style/view_horizontal_line_grey" />

    <RelativeLayout
        android:id="@+id/z_code"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:hint="请输入验证码"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_373737"
            android:textColorHint="@color/text_999999"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_reg_code" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_get_code"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="获取验证码"
            android:textColor="@color/text_ffffff"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>

    <View style="@style/view_horizontal_line_grey_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:digits=" ._@0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_373737"
            android:textColorHint="@color/text_999999"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/iv_pass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_reg_pass" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_orange_red"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/text_ffffff"
        android:textSize="@dimen/text_size16" />

</LinearLayout>