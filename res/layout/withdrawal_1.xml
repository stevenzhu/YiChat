<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/z_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical" >

    <include layout="@layout/common_headbar" />

    <View style="@style/view_horizontal_line_grey" />

    <RelativeLayout
        android:id="@+id/z_card_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择提现的银行卡"
            android:textColor="@color/text_555555"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/iv_card_name"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_arrow_right_grey" />
    </RelativeLayout>

    <View style="@style/view_horizontal_line_grey" />

    <EditText
        android:id="@+id/et_money"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:hint="请输入提现金额"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/text_555555"
        android:textColorHint="@color/text_999999"
        android:textSize="@dimen/text_size14" />

    <View style="@style/view_horizontal_line_grey" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_orange_red"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="@color/text_ffffff"
        android:textSize="@dimen/text_size14" />

</LinearLayout>